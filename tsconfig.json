{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noLib": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": true,

    "outDir": "./dist",
    "target": "es2016"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compileOnSave": true,
  "pretty": true,
  "typeAcquisition": {
    "enable": true
  }
}
